<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
       xmlns:gwt="urn:import:com.google.gwt.user.client.ui">
  
  <ui:with type="com.googlecode.alliwant.client.ui.css.CssBundle" field="css" />
  <ui:with type="com.googlecode.alliwant.client.i18n.AiwConstants" field="aiwc" />
  
  <ui:style>
    .main { padding: 1em; } 
  </ui:style>
  
  <gwt:PopupPanel animationEnabled="true" modal="true" glassEnabled="true"
   addStyleNames="{style.main}">
    <gwt:FlowPanel>
      <gwt:Label ui:field="header" styleName="{css.main.title}" />
      <gwt:FlowPanel styleName="{css.main.field}">
        <gwt:Label ui:field="name" addStyleNames="{css.main.label}" />
        <gwt:TextBox ui:field="value" addStyleNames="{css.main.input}" /> 
      </gwt:FlowPanel> 
      <gwt:FlowPanel styleName="{css.main.buttons}">
        <gwt:Button ui:field="ok" text="{aiwc.ok}" />
        <gwt:Button ui:field="cancel" text="{aiwc.cancel}" />
      </gwt:FlowPanel> 
    </gwt:FlowPanel>
  </gwt:PopupPanel>
</ui:UiBinder>
