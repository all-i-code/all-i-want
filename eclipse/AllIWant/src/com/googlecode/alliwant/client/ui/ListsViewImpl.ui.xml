<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
       xmlns:gwt="urn:import:com.google.gwt.user.client.ui"
       xmlns:aiw="urn:import:com.googlecode.alliwant.client.ui.widget">
  
  <ui:with type="com.googlecode.alliwant.client.i18n.AiwConstants" field="aiwc" />
  <ui:with type="com.googlecode.alliwant.client.ui.css.CssBundle" field="css" />
  
  <gwt:FlowPanel>
    <gwt:SimplePanel ui:field="headerWrapper" addStyleNames="header" />
    <gwt:Label styleName="{css.main.title} {css.main.centered}" 
     text="{aiwc.lists}" />
    
    <gwt:FlowPanel styleName="{css.main.field}">
      <gwt:Label text="{aiwc.user}" addStyleNames="{css.main.label}" />
      <gwt:ListBox ui:field="listOwner" addStyleNames="{css.main.input}" /> 
    </gwt:FlowPanel> 
    
    <gwt:FlowPanel styleName="{css.main.field}">
      <gwt:Label text="{aiwc.list}" addStyleNames="{css.main.label}" />
      <gwt:ListBox ui:field="wishList" addStyleNames="{css.main.input}" /> 
      <gwt:Anchor ui:field="addList" text="{aiwc.addList}" 
        href="javascript:;" addStyleNames="{css.main.sectionLink}" /> 
      <gwt:Anchor ui:field="editList" text="{aiwc.editList}" 
        href="javascript:;" addStyleNames="{css.main.sectionLink}" /> 
    </gwt:FlowPanel> 
  
    <gwt:FlowPanel>
      <gwt:Label text="{aiwc.listItems}" addStyleNames="{css.main.heading}" /> 
      <gwt:Anchor ui:field="addItem" text="{aiwc.addItem}"
       href="javascript:;" addStyleNames="{css.main.sectionLink}" />
    </gwt:FlowPanel>
    <aiw:Table ui:field="items" addStyleNames="{css.main.table}" />
    <aiw:Table ui:field="ownItems" addStyleNames="{css.main.table}" />
  </gwt:FlowPanel>
</ui:UiBinder>
