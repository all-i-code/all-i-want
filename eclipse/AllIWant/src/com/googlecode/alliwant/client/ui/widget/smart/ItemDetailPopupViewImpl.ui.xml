<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
       xmlns:gwt="urn:import:com.google.gwt.user.client.ui">
  
  <ui:with type="com.googlecode.alliwant.client.ui.css.CssBundle" field="css" />
  <ui:with type="com.googlecode.alliwant.client.i18n.AiwConstants" field="aiwc" />
  
  <ui:style>
    .main { padding: 1em; } 
    .wrapper { min-width: 25em; }
  </ui:style>
  
  <gwt:PopupPanel animationEnabled="true" modal="true" glassEnabled="true"
   addStyleNames="{style.main}">
    <gwt:FlowPanel styleName="{style.wrapper}">
      <gwt:Label text="{aiwc.itemDetail}" styleName="{css.main.title}" />
      <gwt:FlowPanel styleName="{css.main.field}">
        <gwt:Label text="{aiwc.name}" addStyleNames="{css.main.label} {css.main.large}" />
        <gwt:Label ui:field="name" addStyleNames="{css.main.input}" /> 
      </gwt:FlowPanel> 
      <gwt:FlowPanel styleName="{css.main.field}">
        <gwt:Label text="{aiwc.category}" addStyleNames="{css.main.label} {css.main.large}" />
        <gwt:Label ui:field="category" addStyleNames="{css.main.input}" /> 
      </gwt:FlowPanel> 
      <gwt:FlowPanel styleName="{css.main.field}">
        <gwt:Label text="{aiwc.description}" addStyleNames="{css.main.label} {css.main.large}" />
        <gwt:Label ui:field="description" addStyleNames="{css.main.input}" /> 
      </gwt:FlowPanel> 
      <gwt:FlowPanel styleName="{css.main.field}">
        <gwt:Label text="{aiwc.url}" addStyleNames="{css.main.label} {css.main.large}" />
        <gwt:Anchor ui:field="url" text="{aiwc.link}" href="javascript:;" 
         addStyleNames="{css.main.input}" /> 
      </gwt:FlowPanel> 
      <gwt:FlowPanel styleName="{css.main.field}">
        <gwt:Label text="{aiwc.reservedBy}" addStyleNames="{css.main.label} {css.main.large}" />
        <gwt:Label ui:field="reservedBy" addStyleNames="{css.main.input}" /> 
      </gwt:FlowPanel> 
      <gwt:FlowPanel styleName="{css.main.field}">
        <gwt:Label text="{aiwc.purchasedBy}" addStyleNames="{css.main.label} {css.main.large}" />
        <gwt:Label ui:field="purchasedBy" addStyleNames="{css.main.input}" /> 
      </gwt:FlowPanel> 
      <gwt:FlowPanel styleName="{css.main.field}">
        <gwt:Label text="{aiwc.action}" addStyleNames="{css.main.label} {css.main.large}" />
        <gwt:Anchor ui:field="action" addStyleNames="{css.main.input}"
         href="javascript:;" /> 
      </gwt:FlowPanel> 
      <gwt:FlowPanel styleName="{css.main.buttons}">
        <gwt:Button ui:field="done" text="{aiwc.done}" />
      </gwt:FlowPanel> 
    </gwt:FlowPanel>
  </gwt:PopupPanel>
</ui:UiBinder>
