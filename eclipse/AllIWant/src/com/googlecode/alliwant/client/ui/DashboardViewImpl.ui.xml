<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
       xmlns:gwt="urn:import:com.google.gwt.user.client.ui"
       xmlns:jhb="urn:import:com.googlecode.alliwant.client.ui.widget">
  
  <ui:with type="com.googlecode.alliwant.client.i18n.JhbConstants" field="jhbc" />
  <ui:with type="com.googlecode.alliwant.client.ui.css.CssBundle" field="css" />
  
  <gwt:FlowPanel>
    <gwt:SimplePanel ui:field="headerWrapper" />
    <gwt:Label styleName="{css.font.title} {css.layout.centered}" 
     text="{jhbc.jobbersHomeBudget}" />
     
    <gwt:Image styleName="{css.layout.centered}" url="/static/images/JHB.png" />
    
    <gwt:FlowPanel styleName="{css.layout.left}">
      <gwt:Label styleName="{css.font.heading}" text="{jhbc.upcomingBills}" />
      <jhb:Table ui:field="bills" />
    </gwt:FlowPanel>
    
    <gwt:FlowPanel styleName="{css.layout.right}">
      <gwt:Label styleName="{css.font.heading}" text="{jhbc.accountBalances}" />
      <jhb:Table ui:field="accounts" />
    </gwt:FlowPanel>
    
    <gwt:FlowPanel styleName="{css.layout.clear}">
      <gwt:Label styleName="{css.font.heading}" 
       text="{jhbc.mostRecentTransactions}" />
      <jhb:Table ui:field="transactions" />
    </gwt:FlowPanel>
  </gwt:FlowPanel>
</ui:UiBinder>
